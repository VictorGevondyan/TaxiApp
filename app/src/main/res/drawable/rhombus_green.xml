<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:gravity="center"
        android:width="16dp"
        android:height="16dp"
        android:right="4dp"
        android:left="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="0" >
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/green_light"/>
            </shape>
        </rotate>
    </item>
</layer-list>