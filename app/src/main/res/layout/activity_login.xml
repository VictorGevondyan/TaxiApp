<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/login_password_width"
            android:layout_height="@dimen/login_password_height"
            android:gravity="center"
            android:hint="@string/username_hint" />

        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/login_password_width"
            android:layout_height="@dimen/login_password_height"
            android:layout_below="@+id/username"
            android:layout_marginTop="@dimen/login_password_between_margin"
            android:gravity="center"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="@dimen/login_button_width"
            android:layout_height="@dimen/login_button_height"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_button_top_margin"
            android:onClick="onLogin"
            android:text="@string/login" />

    </RelativeLayout>

</RelativeLayout>
