<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_map_blurred"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_65_opaque">

        <com.flycode.paradox.taxiuser.layouts.MaximalLinearLayout
            xmlns:flycode="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/credentials_list_margin"
            android:orientation="vertical"
            android:gravity="center"
            flycode:maxWidth="400dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/vip_logo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mobile_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_password"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/green"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white_30_opaque"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/number"
                    android:textColor="@color/white_30_opaque"
                    android:textColorHint="@color/white_30_opaque"
                    android:inputType="phone"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/white_30_opaque"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lock_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/icon_password"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/green"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white_30_opaque"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/password"
                    android:textColor="@color/white_30_opaque"
                    android:textColorHint="@color/white_30_opaque"
                    android:inputType="textWebPassword"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/white_30_opaque"/>

            <com.flycode.paradox.taxiuser.views.LoginView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginTop="55dp"
                android:clickable="true"
                android:onClick="onLoginClicked"/>

            <com.flycode.paradox.taxiuser.views.ReceivePasswordView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:onClick="onReceivePasswordClicked" />

        </com.flycode.paradox.taxiuser.layouts.MaximalLinearLayout>

    </RelativeLayout>

</RelativeLayout>
