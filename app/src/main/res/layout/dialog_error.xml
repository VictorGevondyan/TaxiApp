<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flycode="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flycode.paradox.taxiuser.layouts.MaximalLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/base_grey_100"
        flycode:maxWidth="400dp">

        <TextView
            android:id="@+id/error_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="@dimen/settings_title_text_size"
            android:textColor="@color/white_100"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/error_message_margin"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/white_80"
            android:gravity="center"
            android:background="@android:color/transparent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_40"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/white_100"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"/>


    </com.flycode.paradox.taxiuser.layouts.MaximalLinearLayout>

</RelativeLayout>
