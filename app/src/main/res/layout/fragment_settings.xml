<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:background="@color/base_grey_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_icon_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/settings_entry_margin"
            android:text="@string/icon_name"
            android:textColor="@color/white_100"
            android:textSize="40sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white_100"
            android:textSize="@dimen/small_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/credentials_list_margin"
            android:layout_marginRight="@dimen/credentials_list_margin"
            android:maxWidth="500dp"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_name"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/cyan_100"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white_40"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/name"
                    android:textColor="@color/white_80"
                    android:textColorHint="@color/white_40"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium_text_size"
                    android:inputType="text"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/white_40"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/last_name_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/icon_name"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/cyan_100"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white_40"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/last_name"
                    android:textColor="@color/white_80"
                    android:textColorHint="@color/white_40"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium_text_size"
                    android:inputType="textWebPassword"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/white_100"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/email_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/icon_mail"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/cyan_100"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white_40"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/email"
                    android:textColor="@color/white_80"
                    android:textColorHint="@color/white_40"
                    android:textSize="@dimen/medium_text_size"
                    android:inputType="textEmailAddress"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/white_40"/>

            <com.flycode.paradox.taxiuser.views.GenericTriangleView
                xmlns:flycode="http://schemas.android.com/apk/res-auto"
                android:id="@+id/submit_account"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:layout_marginBottom="@dimen/settings_entry_margin"
                flycode:text="@string/submit"
                flycode:borderColor="#00FFFF"
                flycode:borderHoverColor="#00FFFF" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_entry_margin">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:background="@color/cyan_100"/>

            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/change_password"
                android:textColor="@color/white_100"
                android:textSize="@dimen/medium_text_size"
                android:background="@color/base_grey_100"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/credentials_list_margin"
            android:layout_marginRight="@dimen/credentials_list_margin"
            android:maxWidth="500dp"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/old_password_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_password"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/cyan_100"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white_40"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/old_password"
                    android:textColor="@color/white_80"
                    android:textColorHint="@color/white_40"
                    android:inputType="textWebPassword"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium_text_size"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/white_40"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/enter_password_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_password"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/cyan_100"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white_40"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/enter_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/new_password"
                    android:textColor="@color/white_80"
                    android:textColorHint="@color/white_40"
                    android:inputType="textWebPassword"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium_text_size"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/white_40"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/confirm_password_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/icon_password"
                        android:textSize="@dimen/credentials_icon_size"
                        android:textColor="@color/cyan_100"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/white_40"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:hint="@string/confirm_password"
                    android:textColor="@color/white_80"
                    android:textColorHint="@color/white_40"
                    android:inputType="textWebPassword"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium_text_size"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/white_40"/>

            <com.flycode.paradox.taxiuser.views.GenericTriangleView
                xmlns:flycode="http://schemas.android.com/apk/res-auto"
                android:id="@+id/submit_password"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/settings_entry_margin"
                android:layout_marginBottom="@dimen/settings_entry_margin"
                flycode:text="@string/submit"
                flycode:borderColor="#00FFFF"
                flycode:borderHoverColor="#00FFFF" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_entry_margin">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:background="@color/cyan_100"/>

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/language"
                android:textColor="@color/white_100"
                android:textSize="@dimen/medium_text_size"
                android:background="@color/base_grey_100"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_entry_margin"
            android:paddingBottom="40dp">

            <LinearLayout
                android:id="@+id/armenian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true">

                <com.flycode.paradox.taxiuser.views.RhombusView
                    android:id="@+id/armenian_rhombus"
                    android:layout_width="@dimen/rhombus_size"
                    android:layout_height="@dimen/rhombus_size" />

                <TextView
                    android:id="@+id/armenian_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/armenian"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/white_40"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/armenian"
                android:layout_toStartOf="@id/armenian"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true">

                <com.flycode.paradox.taxiuser.views.RhombusView
                    android:id="@+id/english_rhombus"
                    android:layout_width="@dimen/rhombus_size"
                    android:layout_height="@dimen/rhombus_size" />

                <TextView
                    android:id="@+id/english_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/white_40"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/russian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/armenian"
                android:layout_toEndOf="@id/armenian"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true">

                <com.flycode.paradox.taxiuser.views.RhombusView
                    android:id="@+id/russian_rhombus"
                    android:layout_width="@dimen/rhombus_size"
                    android:layout_height="@dimen/rhombus_size"/>

                <TextView
                    android:id="@+id/russian_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/russian"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/white_40"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
